@model Secret_Sharing.Models.UploadModel

@{
    ViewBag.Title = "Home Page";
}

@if (Session["ID"] != null && Session["ID"].ToString() != "")
{
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">Secret Sharing</h1>
        <h2>Your are login!</h2>
    </section>

    <section class="row" aria-labelledby="aspnetTitle">
        @using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <div class="col-md-10">
                    <label>Upload File</label>
                    <input type="file" class="form-control" name="file" required />
                </div>
                <br />
                <div class="col-md-10">
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </div>
            @ViewBag.Error
        }
    </section>

    <br />
    <section class="row" aria-labelledby="aspnetTitle">
        @using (Html.BeginForm("UploadString", "Home", FormMethod.Post))
        {
            <form method="post" action="@Url.Action("UploadString", "Home")">
                <div class="form-group">
                    <label>File Name:</label>
                    <input type="text" name="fileName" id="fileName" required />
                </div>

                <br />
                <div class="form-group">
                    <label>File Content:</label>
                    <textarea name="content" id="content" style="width:250px;height:150px;" required></textarea>
                </div>

                <br />
                <div>
                    <input type="submit" value="Upload" class="btn btn-primary" />
                </div>
            </form>
            @ViewBag.Error
        }
    </section>

    <br />
    <section class="row" aria-labelledby="aspnetTitle">
        @using (Html.BeginForm("MyFiles", "Home", FormMethod.Get))
        {
            <button type="submit" class="btn btn-primary">View your uploaded files</button>
        }
    </section>
}
else
{
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">Secret Sharing</h1>
        <h2>You are NOT login!</h2>
    </section>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}