@model Secret_Sharing.Models.UploadModel

@{
    ViewBag.Title = "Home Page";
}

@if (Session["ID"] != null && Session["ID"].ToString() != "")
{
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">Secret Sharing</h1>
        <h2>Your are login!</h2>
    </section>
}
else
{
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">Secret Sharing</h1>
        <h2>You are NOT login!</h2>
    </section>
}


@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/formdata" }))
{
    @Html.AntiForgeryToken()

    <div class="form-row">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "control-label col-md-2" })
        <div class="form-group">
            <input type="file" required />
        </div>
    </div>
    <button type="submit" class="btn btn-success">Upload</button>
    @ViewBag.Error
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}